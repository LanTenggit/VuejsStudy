@{
    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta charset="utf-8">
    <title></title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <script src="~/Content/vue2.4.2.min.js"></script>
    <script src="~/Content/axios.min.js"></script>
    <style>
        .page-bar {
            margin: 40px;
        }

        ul, li {
            margin: 0px;
            padding: 0px;
        }

        li {
            list-style: none
        }

        .page-bar li:first-child > a {
            margin-left: 0px
        }

        .page-bar a {
            border: 1px solid #ddd;
            text-decoration: none;
            position: relative;
            float: left;
            padding: 6px 12px;
            margin-left: -1px;
            line-height: 1.42857143;
            color: #337ab7;
            cursor: pointer
        }

            .page-bar a:hover {
                background-color: #eee;
            }

            .page-bar a.banclick {
                cursor: not-allowed;
            }

        .page-bar .active a {
            color: #fff;
            cursor: default;
            background-color: #337ab7;
            border-color: #337ab7;
        }

        .page-bar i {
            font-style: normal;
            color: #d44950;
            margin: 0px 4px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div id="app">
        <table class="table table-striped" id="subtb" cellspacing="0" cellpadding="0">
            <tr>
                <td width="20">Name</td>
                <td width="20">Sex</td>
                <td width="20">StudentNumber</td>
                <td width="20">cooke</td>
            </tr>
            <tr v-for="list in List">
                <td>{{list.Name}}</td>
                <td>{{list.Sex}}</td>
                <td>{{list.StudentNumber}}</td>
                <td>修改</td>
            </tr>
        </table>

    </div>
    <div class="page-bar">

        <ul>
            <li v-if="cur>1"><a v-on:click="cur--,pageClick()">上一页</a></li>
            <li v-if="cur==1"><a class="banclick">上一页</a></li>
            <li v-for="index in indexs" v-bind:class="{ 'active': cur == index}">
                <a v-on:click="btnClick(index)">{{ index }}</a>
            </li>
            <li v-if="cur!=all"><a v-on:click="cur++,pageClick()">下一页</a></li>
            <li v-if="cur == all"><a class="banclick">下一页</a></li>
            <li><a>共<i>{{all}}</i>页</a></li>
        </ul>
    </div>
    <script type="text/javascript">


        var vue = new Vue({
            el: '#app',
            data: {
                List: null,

            },
            mounted: function () {
                this.getEhon()
            },
            methods: {
                getEhon: function () {
                    var that = this;
                    axios.get("../VueAjaxAxios/GetList")
                        .then(function (response) {//返回类型为list<class>
                            that.List = response.data.List;

                            console.log(that.List);
                        }).catch(function (reason) {
                            console.log("error");
                        });

                },
            }
        });



        var pageBar = new Vue({
            el: '.page-bar',
            data: {
                all: 10, //总页数
                cur: 1,//当前页码
                List: null
            },
            watch: {
                cur: function (oldValue, newValue) {
                    console.log(arguments);
                }
            },
            methods: {
                btnClick: function (data) {//页码点击事件
                    if (data != this.cur) {
                        this.cur = data
                        console.log(data);
                    }
                },
                pageClick: function () {
                    console.log('现在在' + this.cur + '页');

                    var that = this;
                    axios.get("../VueAjaxAxios/GetList2")
                        .then(function (response) {//返回类型为list<class>
                            that.List = response.data.List;

                            console.log(that.List);
                        }).catch(function (reason) {
                            console.log("error");
                        });
                }
            },

            computed: {
                indexs: function () {
                    var left = 1;
                    var right = this.all;
                    var ar = [];
                    if (this.all >= 5) {
                        if (this.cur > 3 && this.cur < this.all - 2) {
                            left = this.cur - 2
                            right = this.cur + 2
                        } else {
                            if (this.cur <= 3) {
                                left = 1
                                right = 5
                            } else {
                                right = this.all
                                left = this.all - 4
                            }
                        }
                    }
                    while (left <= right) {
                        ar.push(left)
                        left++
                    }
                    return ar
                }

            }
        })





    </script>
</body>
</html>
